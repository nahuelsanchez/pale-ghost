<header class="header">
    {{#if @site.logo}}
        <div class="blog-logo">
            {{#is "home"}}
                <amp-img alt="{{@site.title}}" height="100" src="{{@site.logo}}" width="100" />
            {{else}}
                <a href="{{@site.url}}" title="{{@site.title}}">
                    <amp-img alt="{{@site.title}}" height="100" src="{{@site.logo}}" width="100" />
                </a>
            {{/is}}
        </div>
    {{/if}}

    <div class="blog-title">
        {{#is "home"}}
            <h1>
                {{@site.title}}
            </h1>
        {{else}}
            <h2>
                <a href="{{@site.url}}" title="{{@site.title}}">{{@site.title}}</a>
            </h2>
        {{/is}}
    </div>

    {{#if @site.description}}
        <div class="blog-description">
            <p>{{@site.description}}</p>
        </div>
    {{/if}}

    {{#if @site.navigation}}
        <nav class="blog-nav">
            {{navigation}}
        </nav>
    {{/if}}
</header>