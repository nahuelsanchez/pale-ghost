<!DOCTYPE html>
<html lang="{{@site.lang}}">
    {{> core/head}}

    <body class="{{body_class}}">
        <div class="wrapper">
            {{> core/header}}

            {{!-- All the main content gets inserted here, index.hbs, post.hbs, etcetera. --}}
            <main class="main">
                {{{body}}}
            </main>

            {{> core/footer}}
        </div>

        {{> core/foot}}
    </body>
</html>
